{
  "name": "@hivemind/dashboard",
  "version": "0.1.0",
  "private": true,
  "description": "Hivemind Web Dashboard",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:api\" \"pnpm run dev:ui\"",
    "dev:ui": "vite",
    "dev:api": "tsx watch ../api/src/index.ts",
    "build": "vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@hivemind/ui": "workspace:*",
    "@hivemind/api": "workspace:*",
    "@hivemind/core": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.0"
  }
}

